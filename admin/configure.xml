<?xml version="1.0" encoding="UTF-8"?>
<config>
	<upload>
		<controller name="article">
			<action name="save" default-size="102400" refference-controller="default" refference-action="default">
				<jpg>
					<mime>image/jpeg</mime>
				</jpg>
				<png>
					<mime>image/png</mime>
				</png>
				<gif>
					<mime>image/gif</mime>
				</gif>
			</action>
		</controller>
		<controller name="banner">
			<action name="save" default-size="1024000">
				<jpg>
					<mime>image/jpeg</mime>
					<width>199</width>
				</jpg>
				<png>
					<mime>image/png</mime>
					<width>199</width>
				</png>
				<gif>
					<mime>image/gif</mime>
					<width>199</width>
				</gif>
			</action>
		</controller>
		<controller name="page">
			<action name="save" default-size="204800">
				<jpg>
					<mime>image/jpeg</mime>
				</jpg>
				<png>
					<mime>image/png</mime>
				</png>
				<gif>
					<mime>image/gif</mime>
				</gif>
			</action>
		</controller>
		<controller name="product">
			<action name="save" default-size="1048000">
				<zip>
					<mime>application/zip</mime>
				</zip>
				<gz>
					<mime>application/x-gzip</mime>
				</gz>
				<tar>
					<mime>application/tar</mime>
					<mime>application/x-gzip</mime>
				</tar>
				<tgz>
					<mime>application/tar-gzip</mime>
					<mime>application/x-gzip</mime>
				</tgz>
				<bz2>
					<mime>application/x-bzip2</mime>
				</bz2>
			</action>
			<action name="savepackage" default-size="16777216">
				<zip>
					<mime>application/zip</mime>
				</zip>
				<gz>
					<mime>application/x-gzip</mime>
				</gz>
				<tar>
					<mime>application/tar</mime>
					<mime>application/x-gzip</mime>
				</tar>
				<tgz>
					<mime>application/tar-gzip</mime>
					<mime>application/x-gzip</mime>
				</tgz>
				<bz2>
					<mime>application/x-bzip2</mime>
				</bz2>
			</action>
		</controller>
	</upload>
